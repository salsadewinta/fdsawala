<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
         {{#if user}}
          <meta name="username" content="{{ user.username }}">
          <meta name="email" content="{{ user.email }}">
          <!-- Tambahkan tag meta lainnya sesuai kebutuhan -->
        {{/if}}
        <title>Sawala</title>
         <style>
        /* Style tambahan jika diperlukan */
        .list-group {
            margin-top: 20px;
        }
        .trending-topics{
           margin-top: 50PX;
            margin-left: 80px;
             box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        }

        .trending-topics{
           position: relative;
        }
         /* Style tambahan jika diperlukan */
        .month {
            margin-bottom: 20px;
        }

        .month h3 {
            margin-bottom: 10px;
            text-align: center;
        }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6;
        }

        .table-bordered th {
            background-color: #f8f9fa;
        }
        .form-control {
          margin-right: 2px;
        }

        .btn {
          margin-left: 2px;
        }
    </style>
</head>
<body class="bg-body-tertiary">
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidebarCollapse"
            aria-controls="sidebarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
      <a class="navbar-brand" href="#"><img class="logo" src="/img/ulbi.png" alt="ulbixsawala"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-pills">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="homepage"><i class="fa-solid fa-house"></i></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="\mahasiswa/chatbot"><i class="fa-solid fa-comment"></i></a>
          </li>  
          <li class="nav-item">
            <a class="nav-link" href="#"><img src="/img/profile/avatar_(2).png" class="rounded-circle" alt="foto-profile">{{user.username}}</a>
          </li>
        </ul>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
          <button class="btn btn-danger" type="submit">Logout</button>
        </form>
      </div>
    </div>
  </nav>
   <hero>
    <div class="hero">
      <div class="hero-content">
        <div class="hero-text">
          <h1>Welcome to Sawala</h1>
          <p id="typewriter-text">Forum Diskusinya Mahasiswa Kreatif Ulbi</p>
        </div>
      </div>
    </div>
   </hero>

    <tabs>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link" href="\mahasiswa/homepage">Informasi terkini</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Pertanyaan anda</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/info/read-info">Bagikan informasi</a>
        </li>
      </ul>
    </tabs>
     <!-- Sidebar -->
     <sidebar>
        <nav id="sidebar" class="sidebar">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li class="dropdown">
                    <a href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu1">Services</a>
                    <ul id="submenu1" class="collapse">
                        <li><a href="#">Service 1</a></li>
                        <li><a href="#">Service 2</a></li>
                    </ul>
                </li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
     </sidebar>

  <main>
    <section>
      <form action="/mahasiswa-pertanyaan" method="post">   
        <div class="container">
          <div class="card">
            <div class="card-header">
                <div class="card-logo">
                  <img src="/img/profile/avatar_(2).png" class="rounded-circle" alt="foto-profile">
                </div>
                <div class="card-title">
                  <h7>Anda</h7>
                  <p><small class="text-body-secondary">Last updated 3 mins ago</small></p>
              </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                  <label class="form-label">Tuliskan pertanyaanmu</label>
                  <textarea name="pertanyaan" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
               <input type="submit" value="Ajukan Pertanyaan" class="btn btn-primary">
            </div>
          </div>
        </div>
      </form>

    {{#each diskusis}}
      <div class="post">
        <div class="card">
          <div class="card-header">
            <h5>Pertanyaan Anda</h5>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><b>{{this.pertanyaan}}</b></p>
              <footer class="blockquote-footer">Success upload {{this.latepost}} mins ago</footer>
            </blockquote>
          </div>
          <div class="card-footer">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <li class="page-item"><a href="/homepage/edit_pertanyaan/{{this.id}}" class="page-link" href="#"><i class="fa-regular fa-pen-to-square" style="color: #fad000;"></i></a></li>
                <li class="page-item"><a href="/homepage/hapus_pertanyaan/{{this.id}}" class="page-link" href="#"><i class="fa-regular fa-trash-can" style="color: #fa000c;"></i></a></li>              
              </ul>
            </nav>
          </div>
        </div>
      </div>
    {{/each}}
    </section>
  </main>

    <footer>
      <div class="footer">
        <p>Sawala.20223-v.0.0.1</p>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.navbar-toggler').on('click', function () {
                $('.sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>