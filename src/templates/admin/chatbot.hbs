                <form action="/chatbot-send" method="post"></form>
                  <div class="input-container">
                      <div class="message-input">
                          <input name="message" type="text" id="user-message" class="user-message-input" placeholder="Type your message...">
                      </div>
                      <button id="send-button" class="send-button" onclick="sendMessage()">Send</button>
                  </div>
